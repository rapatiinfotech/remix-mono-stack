{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["DEV", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["build/**", "!build/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{test,spec}.{js,ts,jsx,tsx}"]
    },
    "test:run": {
      "dependsOn": ["^test:run"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{test,spec}.{js,ts,jsx,tsx}"]
    },
    "test:ui": {
      "dependsOn": ["^test:ui"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{test,spec}.{js,ts,jsx,tsx}"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
